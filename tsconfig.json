{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "es6",
    "lib": [
      "es2016",
      "es6",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "types": [
    "node",
    "reflect-metadata"
  ],
  "include": [
    "./src/**/*.ts",
    "node_modules/@types/node/globals.d.ts"
  ],
  "exclude": [
    "node_modules",
    "./public",
    "dist",
    "src"
  ]
}
